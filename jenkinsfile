pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION='us-east-1'
        AWS_ACCESS_KEY_ID=credentials('aws-access-key-id')
        AWS_SECRET_ACCESS_KEY=credentials('aws-secret-access-key')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: '8e6d2168-cf0f-4349-bbf2-be116fadc89d', url: 'https://github.com/aayodipe/learn-terraform-circleci.git'
            }
        }
        stage('Terraform Fmt') {
            steps {
                sh "terraform fmt"
            }
        }
        stage('Terraform Init') {
            steps {
                sh "terraform init"
            }
        }

        stage('Terraform Plan') {
            steps {
                sh "terraform plan -out=terraform.plan"
            }
        }
        stage('Terraform Apply') {
            steps {
                sh "terraform apply -var-file=terraform.tfvar terraform.plan -auto-approve"
            }
        }

 
    }
}
